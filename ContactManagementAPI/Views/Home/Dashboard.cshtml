@using ContactManagementAPI.Services
@model ContactStatistics
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-chart-line"></i> Contact Dashboard</h2>
            <p class="text-muted">Last updated: @Model.LastUpdated.ToString("yyyy-MM-dd HH:mm:ss")</p>
        </div>
    </div>

    <!-- Key Statistics -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-users text-primary"></i> Total Contacts</h5>
                    <h3 class="text-primary">@Model.TotalContacts</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-envelope text-success"></i> With Email</h5>
                    <h3 class="text-success">@Model.ContactsWithEmail</h3>
                    <small class="text-muted">@($"{(Model.TotalContacts > 0 ? (Model.ContactsWithEmail * 100 / Model.TotalContacts) : 0)}%")</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-phone text-warning"></i> With Phone</h5>
                    <h3 class="text-warning">@Model.ContactsWithPhone</h3>
                    <small class="text-muted">@($"{(Model.TotalContacts > 0 ? (Model.ContactsWithPhone * 100 / Model.TotalContacts) : 0)}%")</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Details -->
    <div class="row">
        <!-- Top Cities -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-map-marker-alt"></i> Top Cities</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopCities.Any())
                    {
                        <div class="list-group">
                            @foreach (var city in Model.TopCities)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@city.City</h6>
                                        <span class="badge bg-info">@city.Count</span>
                                    </div>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar bg-info" role="progressbar" 
                                             style="width: @($"{(city.Count * 100 / (Model.TopCities.FirstOrDefault()?.Count ?? 1))}%")" 
                                             aria-valuenow="@city.Count" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No city data available</p>
                    }
                </div>
            </div>
        </div>

        <!-- Contacts by Group -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-layer-group"></i> Contacts by Group</h5>
                </div>
                <div class="card-body">
                    @if (Model.ContactsByGroup.Any())
                    {
                        <div class="list-group">
                            @foreach (var group in Model.ContactsByGroup)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@group.GroupName</h6>
                                        <span class="badge bg-success">@group.Count</span>
                                    </div>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar bg-success" role="progressbar" 
                                             style="width: @($"{(group.Count * 100 / (Model.ContactsByGroup.FirstOrDefault()?.Count ?? 1))}%")" 
                                             aria-valuenow="@group.Count" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No group data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="btn-group" role="group">
                <a href="@Url.Action("Index")" class="btn btn-primary">
                    <i class="fas fa-list"></i> View All Contacts
                </a>
                <a href="@Url.Action("FindDuplicates")" class="btn btn-warning">
                    <i class="fas fa-copy"></i> Find Duplicates
                </a>
                <a href="@Url.Action("Import")" class="btn btn-success">
                    <i class="fas fa-file-import"></i> Import Contacts
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh statistics every 5 minutes
        setTimeout(() => {
            location.reload();
        }, 5 * 60 * 1000);
    </script>
}
