@model IEnumerable<ContactManagementAPI.Models.Contact>
@{
    ViewData["Title"] = "All Contacts";
}

<div class="contacts-container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" style="padding: 15px; margin-bottom: 20px; background: #d4edda; border: 1px solid #c3e6cb; border-radius: 8px; color: #155724;">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }
    
    <div class="contacts-header">
        <h2>All Contacts</h2>
        <a href="/home/create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Contact
        </a>
    </div>

    <div class="search-container">
        <form method="get" action="/home/index" class="search-form">
            <input type="text" name="searchTerm" placeholder="Search by name, email, or phone..." class="search-input">
            <button type="submit" class="btn btn-secondary">
                <i class="fas fa-search"></i> Search
            </button>
        </form>
    </div>

    @if (Model.Count() == 0)
    {
        <div class="no-contacts">
            <i class="fas fa-inbox"></i>
            <p>No contacts found. <a href="/home/create">Create your first contact</a></p>
        </div>
    }
    else
    {
        <div class="contacts-grid">
            @foreach (var contact in Model)
            {
                <div class="contact-card">
                    <div class="contact-photo">
                        @if (!string.IsNullOrEmpty(contact.PhotoPath))
                        {
                            <img src="@contact.PhotoPath" alt="@contact.FirstName @contact.LastName" />
                        }
                        else
                        {
                            <div class="photo-placeholder">
                                <i class="fas fa-user"></i>
                            </div>
                        }
                    </div>
                    <div class="contact-info">
                        <h3>@contact.FirstName @contact.LastName</h3>
                        @if (!string.IsNullOrEmpty(contact.NickName))
                        {
                            <p class="nickname">(@contact.NickName)</p>
                        }
                        @if (contact.Group != null)
                        {
                            <span class="badge badge-group">@contact.Group.Name</span>
                        }
                        <div class="contact-details">
                            @if (!string.IsNullOrEmpty(contact.Email))
                            {
                                <p><i class="fas fa-envelope"></i> <a href="mailto:@contact.Email">@contact.Email</a></p>
                            }
                            @if (!string.IsNullOrEmpty(contact.Mobile1))
                            {
                                <p><i class="fas fa-phone"></i> @contact.Mobile1</p>
                            }
                            @if (!string.IsNullOrEmpty(contact.WhatsAppNumber))
                            {
                                <p><i class="fab fa-whatsapp"></i> @contact.WhatsAppNumber</p>
                            }
                        </div>
                    </div>
                    <div class="contact-actions">
                        <a href="/home/details/@contact.Id" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i> View
                        </a>
                        <a href="/home/edit/@contact.Id" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="/home/delete/@contact.Id" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>
