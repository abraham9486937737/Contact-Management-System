@model ContactManagementAPI.ViewModels.GroupEditViewModel
@{
    ViewData["Title"] = "Create Group";
}

<div class="form-container">
    <h2><i class="fas fa-plus"></i> Create Group</h2>

    <form method="post" asp-action="CreateGroup">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="/admin/groups" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
